{
  "compilerOptions": {
    "outDir": "dist",//编译后生成的文件在目录dist下  
    "sourceMap": true,//采取sourceMap
    "target": "es2016",//目标语法
    "module": "esnext",//模块格式
    "moduleResolution": "node",//模块解析方式
    "strict": false,//严格模式
    "resolveJsonModule": true,//解析json模块
    "esModuleInterop": true,//允许通过es6语法引入common.js模块
    "jsx": "preserve",//jsx 不转义
    "lib": ["ESNext","DOM"],//支持的类库，esnext及dom
    "baseUrl": ".",
    "paths": {
      "@vue/*":["packages/*/src"]// 此处映射是相对于"baseUrl"
    }
  }
}
